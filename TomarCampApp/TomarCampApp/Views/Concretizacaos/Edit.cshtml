@model TomarCampApp.Models.Concretizacao

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Concretizacao</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.dataInicioConcretizacao, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="datetime-local" name="dataInicioConcretizacao">
            @Html.ValidationMessageFor(model => model.dataInicioConcretizacao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.dataFimConcretizacao, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="datetime-local" name="dataFimConcretizacao">
            @Html.ValidationMessageFor(model => model.dataFimConcretizacao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.local, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.local, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.local, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AtividadeFK, "AtividadeFK", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("AtividadeFK", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AtividadeFK, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ListaDeObjetosDeFuncionario.First().Nome, "Funcionarios", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{ string selecionado = "";}
            @foreach (var item in ViewBag.ListaObjetosDeFunc)
            {

                <input type="checkbox" name="opcoesEscolhidasDeFunc" value="@item.ID" @selecionado />@item.Nome
                <br />

            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
