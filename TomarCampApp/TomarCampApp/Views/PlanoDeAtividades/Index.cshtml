@model IEnumerable<TomarCampApp.Models.PlanoDeAtividades>

@{
    ViewBag.Title = "Planos de Actividades";
}

<h2>Planos de Actividades</h2>

@if (User.IsInRole("Func"))
{
    <p>
        @Html.ActionLink("Criar plano de actividades", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Turno)
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.ActionLink("Turno " + item.Turno, "Details", new { id = item.ID })
                @if (User.IsInRole("Func"))
                {
                    <text>|</text> @Html.ActionLink("✏️", "Edit", new { id = item.ID })
                }
            </td>
            
        </tr>
    }

</table>
