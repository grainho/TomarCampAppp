@model TomarCampApp.Models.PlanoDeAtividades

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>
        @Html.DisplayNameFor(model => model.Turno)
    @Html.DisplayFor(model => model.Turno)
</h4>
<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@Html.HiddenFor(model => model.ID)

<div class="form-group">
    @Html.LabelFor(model => model.Turno, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Turno, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Turno, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.dataInicioPA, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        <input type="datetime-local" name="dataInicioPA">
        @Html.ValidationMessageFor(model => model.dataInicioPA, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.dataFimPA, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        <input type="datetime-local" name="dataFimPA">
        @Html.ValidationMessageFor(model => model.dataFimPA, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ListaDeObjetosDeConcretizacao.First().Atividade.Nome, "Concretizações", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @{ string selecionado = "";}
        @foreach (var item in ViewBag.ListaObjetosDeConc)
    {

        <input type="checkbox" name="opcoesEscolhidasDeConc" value="@item.ID" @selecionado />@item.Atividade.Nome<text> | </text> @item.dataInicioConcretizacao
        <br />

}
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Guardar" class="btn btn-default" />
    </div>
</div>
</div>
}

<div>
    @Html.ActionLink("Voltar à lista de planos", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
